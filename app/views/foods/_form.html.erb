<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new_food_form_wrapper">

    <div class="add_food_header_wrapper">
      <h1>Add New Food</h1>
      <div>
        <%= link_to "Back to foods", foods_path, class: "links" %>
      </div>
    </div>

    <div class="input_container">
      <%= form.text_field :name, 
            placeholder: "Enter food name.", class: "add_food_input" %>
    </div>

    <div class="input_container">
      <%= form.text_field :measurement_unit,
            placeholder: "Enter measurement unit.", class: "add_food_input" %>
    </div>

    <div class="input_container">
      <%= form.text_field :price,
            placeholder: "Enter price.", class: "add_food_input" %>
    </div>

    <div class="input_container">
      <%= form.number_field :quantity,
            placeholder: "Enter measurement", class: "add_food_input" %>
    </div>

    <div class="input_container">
      <%= form.text_field :user_id,
            placeholder: "Enter username", class: "add_food_input" %>
    </div>

    <div>
        <%= form.submit "Add Food", class: "button" %>
    </div>

  </div>
<% end %>
