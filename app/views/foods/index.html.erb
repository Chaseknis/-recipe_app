<div class="food_table_container">
  <p style="color: green"><%= notice %></p>
  
  <a href="<%=request.path%>/new">
    <%= link_to new_food_path(), class: "button" do %>
    <button class="add_food_button">Add food</button>
    <% end %>
  </a>

  <div class="food_table_wrapper">
    <div id="foods">
      <table class="food_table">
        <thead>
          <tr>
            <th scope="col" class="scope-col">Food</th>
            <th scope="col" class="scope-col">Measurement Unit</th>
            <th scope="col" class="scope-col">Unit Price</th>
            <th scope="col" class="scope-col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td>$<%= food.price %></td>
              <td><%= food.quantity %></td>
              <td>
                <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: "button" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
