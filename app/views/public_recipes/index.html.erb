<div class="public_recipes_container">

  <h2>Public Recipes</h2>

  <ul>
    <% @recipes.each do |recipe| %>
        <li>
             <div>
                <h4><%= link_to recipe.name, recipe_path(recipe), class:"links" %></h4>
                <p>By: <%= recipe.user.name %></p>
            </div>
        </li>

         <li>
            <p>Total food items: <%= recipe.total_food_items %></p>
            <p>Total price: <%= number_to_currency(recipe.total_price) %></p>
        </li>
    <% end %>
  </ul>
</div>