<div class='ingredient-container'>
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path do |form| %>

    <br>
    <p class="form-label">Select Ingredient</p>
    <br>

    <p class="form-label">Food name</p>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class: 'form-select' } %>
    <br>
    <p class="form-label">Quantity</p>
    <%= form.number_field :quantity, class: 'form-control' %>
    <br>
    <%= form.submit "Add Ingredient", class: 'form-submit' %>
  <% end %>
</div>

